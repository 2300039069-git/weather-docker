# Step 1: Build stage (Node.js for React/Vite)
FROM node:18 AS build-stage

WORKDIR /app

# Install git for repo cloning
RUN apt-get update && apt-get install -y git

# Clone your frontend repo
RUN git clone https://github.com/2300039069-git/weather-frontend.git .

# Install dependencies and build the app
RUN npm install
RUN npm run build

# Step 2: Runtime stage (Tomcat for serving)
FROM tomcat:9.0-jdk17

# Remove default Tomcat apps
RUN rm -rf /usr/local/tomcat/webapps/*

# Copy React/Vite build output to Tomcat webapps as 'weather-app'
COPY --from=build-stage /app/dist /usr/local/tomcat/webapps/weather-app

EXPOSE 8080

CMD ["catalina.sh", "run"]

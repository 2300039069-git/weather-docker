# Stage 1: Build with Maven and Java 21
FROM maven:3.9.6-eclipse-temurin-21 AS build

WORKDIR /app

# Install git for repo cloning (optional: if you want the container to clone)
RUN apt-get update && apt-get install -y git

# Clone your backend repo (alternatively, copy files from your local machine)
RUN git clone https://github.com/2300039069-git/weather-backend.git .

# Build the application
RUN mvn clean package -DskipTests

# Stage 2: Run with Java 21
FROM eclipse-temurin:21-jre-jammy

WORKDIR /app

# Copy the JAR from the build stage
COPY --from=build /app/target/*.jar app.jar

EXPOSE 8080

# Run the application
ENTRYPOINT ["java", "-jar", "app.jar"]
